{
  "schemas": {
    "Player": {
      "type": "object",
      "properties": {
        "uuid": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "uuid",
        "name"
      ]
    },
    "Game": {
      "type": "object",
      "properties": {
        "uuid": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "uuid",
        "name"
      ]
    },
    "GameSessionStatus": {
      "type": "string",
      "enum": [
        "in_progress",
        "paused",
        "completed"
      ]
    },
    "GameSessionPlayerStatus": {
      "type": "string",
      "enum": [
        "playing",
        "waiting",
        "passed"
      ]
    },
    "PlayerMove": {
      "type": "object",
      "properties": {
        "startTimestamp": {
          "type": "string",
          "format": "date-time"
        },
        "endTimestamp": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "moveIndex": {
          "type": "integer"
        },
        "turnIndex": {
          "type": "integer"
        }
      },
      "required": [
        "startTimestamp",
        "moveIndex",
        "turnIndex"
      ]
    },
    "GameSessionPlayer": {
      "allOf": [
        {
          "$ref": "#/schemas/Player"
        },
        {
          "type": "object",
          "properties": {
            "moves": {
              "type": "array",
              "items": {
                "$ref": "#/schemas/PlayerMove"
              }
            },
            "status": {
              "$ref": "#/schemas/GameSessionPlayerStatus"
            },
            "previousTotalTimeMs": {
              "type": "integer"
            },
            "turnOrderIndex": {
              "type": "integer"
            }
          },
          "required": [
            "moves",
            "status",
            "previousTotalTimeMs",
            "turnOrderIndex"
          ]
        }
      ]
    },
    "GameSession": {
      "type": "object",
      "properties": {
        "uuid": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "game": {
          "$ref": "#/schemas/Game"
        },
        "status": {
          "$ref": "#/schemas/GameSessionStatus"
        },
        "players": {
          "type": "array",
          "items": {
            "$ref": "#/schemas/GameSessionPlayer"
          }
        },
        "currentTurnIndex": {
          "type": "integer"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        }
      },
      "required": [
        "uuid",
        "name",
        "game",
        "status",
        "players",
        "currentTurnIndex",
        "createdAt"
      ]
    },
    "ErrorResponse": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": [
            "object",
            "null"
          ],
          "description": "Optional structured error details"
        }
      },
      "required": [
        "error",
        "message"
      ]
    }
  }
}
