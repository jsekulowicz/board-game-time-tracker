      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "type": "string"
              },
              "message": {
                "type": "string"
              },
              "statusCode": {
                "type": "integer"
              }
            },
            "required": [
              "error",
              "message",
              "statusCode"
            ]
          }
        }
      }
    },
    "Error404": {
      "description": "Not Found",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/responses/Error400/schema"
          }
        }
      }
    },
    "Error500": {
      "description": "Internal Server Error",
      "content": {
