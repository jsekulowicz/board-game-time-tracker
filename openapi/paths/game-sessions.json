{
  "paths": {
    "/game-sessions": {
      "get": {
        "summary": "List game sessions",
        "operationId": "listGameSessions",
        "responses": {
          "200": {
            "description": "List of game sessions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "../components/schemas/game-sessions.json#/schemas/GameSession"
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "../components/responses.json#/responses/Error500"
          }
        }
      },
      "post": {
        "summary": "Create a game session",
        "operationId": "createGameSession",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/game-sessions.json#/schemas/GameSession"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Game session created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../components/schemas/game-sessions.json#/schemas/GameSession"
                }
              }
            }
          },
          "400": {
            "$ref": "../components/responses.json#/responses/Error400"
          }
        }
      }
    },
    "/game-sessions/{uuid}": {
      "get": {
        "summary": "Get game session by UUID",
        "parameters": [
          {
            "$ref": "../components/parameters.json#/parameters/UuidParam"
          }
        ],
        "responses": {
          "200": {
            "$ref": "../components/schemas/game-sessions.json#/schemas/GameSession"
          },
          "404": {
            "$ref": "../components/responses.json#/responses/Error404"
          }
        }
      }
    }
  }
}
